{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:base',
    ':semanticCommitsDisabled',
    ':prHourlyLimitNone',
    ':prConcurrentLimitNone',
  ],
  timezone: 'Asia/Tokyo',
  schedule: ['every weekend'],
  packageRules: [
    {
      matchManagers: ['npm'],
      rangeStrategy: 'bump',
    },
    {
      matchManagers: ['npm'],
      matchPackageNames: ['prettier', 'zenn-cli', 'yarn'],
      matchUpdateTypes: ['minor', 'patch'],
      automerge: true,
    },
  ],
}
